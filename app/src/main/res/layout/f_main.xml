<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fm_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
<android.support.v7.widget.RecyclerView android:id="@+id/toDoList_recycler"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_button"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:src="@drawable/ic_plus_basic"
        android:layout_gravity="right|bottom"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/toDoList_recycler"
        android:layout_alignEnd="@+id/toDoList_recycler" />


    </RelativeLayout>